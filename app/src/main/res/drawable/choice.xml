<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:endColor="#A19999" android:startColor="#A19999" />
            <corners android:radius="15dp" />
            <stroke android:width="5dp" android:color="#080878" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="15dp" />
            <stroke android:width="5dp" android:color="#0000FF" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:endColor="#7A7777" android:startColor="#7A7777" />
            <corners android:radius="15dp" />
            <stroke android:width="5dp" android:color="#000000" />
        </shape>
    </item>
</selector>